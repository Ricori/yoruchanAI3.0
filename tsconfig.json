{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    //"noEmit": true,
    "skipLibCheck": true,
  },
  "include": [
    "index.ts",
    "config.ts",
    "./src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}